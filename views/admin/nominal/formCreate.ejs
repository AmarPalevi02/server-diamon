<div class="card card-primary">
    <div class="card-header">
        <h3 class="card-title">Tambah Catgory</h3>
    </div>
    <form action="/category/create" method="POST">
        <div class="card-body">
            <div class="form-group">
                <label for="exampleInputEmail1">Masukan Coin Quantity</label>
                <input type="number" name="coinQuantity" class="form-control" id="coinQuantity" placeholder="Enter Coin Quantity">
            </div>
            <div class="form-group">
                <label for="exampleInputEmail1">Masukan Coin Name</label>
                <input type="text" name="coinName" class="form-control" id="coinName" placeholder="Enter Coin Name">
            </div>
            <div class="form-group">
                <label for="exampleInputEmail1">Masukan Pricey</label>
                <input type="number" name="price" class="form-control" id="price" placeholder="Enter Category">
            </div>
        </div>

        <div class="card-footer">
            <button type="submit" class="btn btn-success">Save</button>
        </div>
    </form>
</div>