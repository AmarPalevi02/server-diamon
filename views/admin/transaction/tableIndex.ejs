<table id="example2" class="table table-bordered table-hover">
   <thead>
      <tr>
         <th>No</th>
         <th>Nama Game</th>
         <th>Item</th>
         <th>Total Harga</th>
         <th>Nama Player</th>
         <th>Status</th>
         <th>Aksi</th>
      </tr>
   </thead>
   <tbody>
      <% for(let i=0; i < transactions.length; i++ ) { %>
         <tr>
            <td>
               <%= i + 1 %>
            </td>
            <td>
               <ul class="list-inline">
                  <li class="list-inline-item">
                     <img width="48px" height="48px" src="http://localhost:8888/uploads/<%= transactions[i].historyVoucherTopup.thumbnail %>"
                        alt="">
                  </li>
               </ul>
               <%= transactions[i]?.historyVoucherTopup?.gameName %>
            </td>
            <td>
               <%= transactions[i]?.historyVoucherTopup?.category %>
            </td>
            <td>
               <%= transactions[i]?.historyVoucherTopup?.coinQuantity %>
            </td>
            <td>
               <%= transactions[i]?.name %>
            </td>
            <td>
               <% if(transactions[i].status === 'pending') { %>
                  <span class="badge bg-warning ">
                     <%= transactions[i].status %>
                  </span>
               <%} else if(transactions[i].status === 'success') { %>
                  <span class="badge bg-success ">
                     <%= transactions[i].status %>
                  </span>
              <% } else{ %>
               <span class="badge bg-danger ">
                  <%= transactions[i].status %>
               </span>
              <%}%>
            </td>

            <td>
               <form style="display: inline-block;" action="/transactions/status/<%= transactions[i]._id%>?status=failed&_method=PUT" method="POST">
                  <button class="btn btn-warning btn-sm">
                      <i class="fas fa-times-circle"></i>
                      Tolak
                  </button>
              </form> 
               <form style="display: inline-block;" action="/transactions/status/<%= transactions[i]._id%>?status=success&_method=PUT" method="POST">
                  <button class="btn btn-info btn-sm">
                      <i class="fas fa-check"></i>
                      Trima
                  </button>
              </form> 
            </td>
         </tr>
         <% } %>


            <% if(transactions.length===0 ) { %>
               <tr class="empty-data-message">
                  <td colspan="5" style="text-align: center;">Data kosong</td>
               </tr>
               <% } %>
   </tbody>
</table>